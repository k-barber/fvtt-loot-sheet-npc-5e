<div class="dnd5e lsnpc chat-card item-card loot-item-card"
    data-actor-id="{{destination.id}}"
    data-lootsheet-loot-id="{{destination._id}}-{{type}}-{{sourceId}}"
    style="
        --sheettint: {{hexToRGB flags.lootsheetnpc5e.sheettint.value flags.lootsheetnpc5e.sheettint.alpha}};
        --avatartint: {{hexToRGB flags.lootsheetnpc5e.avatartint.value flags.lootsheetnpc5e.avatartint.alpha}};
        --blendmode: {{flags.lootsheetnpc5e.sheettint.blendmode}};
        --style: {{flags.lootsheetnpc5e.sheettint.style}};">
    <div class="loot-info flexrow" style="align-items: center; justify-content: center;">
        <a class="lsnpc-document-link" draggable="true" data-entity="Actor" data-uuid="{{destination.uuid}}">
            <img src="{{destination.img}}" class="looter-icon character-icon" title="{{destination.name}}">
        </a>
        <span class="action-message"> {{actionMessage}} </span>
        <a class="lsnpc-document-link" draggable="true" data-entity="Actor" data-uuid="{{source.uuid}}">
            <img src="{{source.img}}" class="looter-icon npc-icon" title="{{source.name}}">
        </a>
    </div>

    <header class="card-header flexrow">
        <span class="item-name"> ↕ Toggle Details ↕ </span>
    </header>

    <div class="card-content" style="display:none">
        <ol class="loot-results item-list">
            {{#each items as |item|}}
                <li class="table-result item flexrow">
                    <div class="item-quantity">
                        <strong>{{item.system.quantity}}&nbsp; &#xD7;</strong>
                    </div>
                    <a class="item-link lsnpc-document-link" draggable="true"
                            data-entity="{{item.documentName}}"
                            data-id="{{item.id}}"
                            data-uuid="{{item.uuid}}">
                        <img class="item-image" src="{{item.system.img}}" class="{{#if ../colorRarity}}rarity-{{#if item.system.rarity}}{{item.system.rarity}}{{else}}common{{/if}}{{/if}}">
                        <div class="item-name">
                            {{{item.system.name}}}
                        </a>
                    </div>
                    <div class="item-price" title="{{item.system.quantity}} &#xD7; {{item.system.price}} gp">
                        {{item.priceTotal}} ({{item.system.price}} ) <i class="fas fa-coins"></i>
                    </div>
                </li>
            {{/each}}
        </ol>
    </div>
</div>