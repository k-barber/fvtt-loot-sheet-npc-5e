{
        "compilerOptions": {
                "allowJs": true,
                "module": "es2020",
                "moduleResolution": "node",
                "target": "es2020",
                "lib": [
                        "es2020",
                        "es6",
                        "es5",
                        "dom"
                ],
                "outDir": "./dist",
                "rootDir": "./src",
                "sourceMap": true,
                "experimentalDecorators": true,
                "strict": true,
                "strictNullChecks": true,
                "esModuleInterop": false,
                "types": [
                        "./types",
                        "@league-of-foundry-developers/foundry-vtt-types/index-lenient",
                        "@league-of-foundry-developers/foundry-vtt-dnd5e-types",
                        "node",
                ],
                "resolveJsonModule": true
        },
        "include": [
                "./**/*"
        ],
        "exclude": [
                "node_modules",
                "**/*.d.ts",
                "rollup.config.js",
                "test/**/*",
                "dist/**.*",
                "coverage"
        ],
}